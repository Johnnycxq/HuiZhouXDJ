<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <!-- 闪屏页背景 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:windowBackground">@drawable/shape</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>

    <style name="editTextTheme">
        <item name="android:padding">10px</item>
        <item name="android:layout_margin">10px</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">#bb000000</item>
        <item name="android:textSize">36px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70px</item>
    </style>

    <style name="toolbarTheme">
        <item name="android:background">@color/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110px</item>
        <item name="android:minHeight">110px</item>
    </style>

    <!-- 扫一扫 -->
    <style name="smallButtonTheme">
        <item name="android:background">@drawable/pressed_bg_blue88</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="button">
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:background">@drawable/presslr</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textTheme">
        <item name="android:layout_width">@dimen/textWidth</item>
        <item name="android:layout_height">@dimen/sbHeight</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/sbtextSize</item>
    </style>

    <style name="gzqkText">
        <item name="android:layout_width">160px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">35px</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--全屏dialog -->
    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
